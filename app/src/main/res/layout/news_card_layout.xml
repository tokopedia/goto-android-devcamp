<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/news_card_background_drawable"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/content_img"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@android:color/darker_gray"
        android:layout_width="150dp"
        android:layout_height="150dp"/>

    <TextView
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/content_title"
        app:layout_constraintLeft_toRightOf="@id/content_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginStart="10dp"
        android:textSize="10sp"
        android:id="@+id/content_author"
        app:layout_constraintLeft_toRightOf="@id/content_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="6dp"
        android:layout_marginStart="10dp"
        android:textSize="14sp"
        android:id="@+id/content_desc"
        app:layout_constraintLeft_toRightOf="@id/content_img"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/content_author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>